<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout style="@style/AppDividerLinearLayout">

                <TextView
                    style="@style/AppNameTextView"
                    android:text="@string/team_a_name" />

                <TextView
                    android:id="@+id/team_a_score_text_view"
                    style="@style/AppCounterTextView" />

                <Button
                    style="@style/AppCounterButton"
                    android:onClick="addSixForTeamA"
                    android:text="@string/team_add_six_points" />

                <Button
                    style="@style/AppCounterButton"
                    android:onClick="addThreeForTeamA"
                    android:text="@string/team_add_three_points" />

                <Button
                    style="@style/AppCounterButton"
                    android:onClick="addTwoForTeamA"
                    android:text="@string/team_add_two_points" />

                <Button
                    style="@style/AppCounterButton"
                    android:onClick="addOneForTeamA"
                    android:text="@string/team_add_one_point" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_standard"
                android:background="@android:color/darker_gray" />

            <LinearLayout style="@style/AppDividerLinearLayout">

                <TextView
                    style="@style/AppNameTextView"
                    android:text="@string/team_b_name" />

                <TextView
                    android:id="@+id/team_b_score_text_view"
                    style="@style/AppCounterTextView" />

                <Button
                    style="@style/AppCounterButton"
                    android:onClick="addSixForTeamB"
                    android:text="@string/team_add_six_points" />

                <Button
                    style="@style/AppCounterButton"
                    android:onClick="addThreeForTeamB"
                    android:text="@string/team_add_three_points" />

                <Button
                    style="@style/AppCounterButton"
                    android:onClick="addTwoForTeamB"
                    android:text="@string/team_add_two_points" />

                <Button
                    style="@style/AppCounterButton"
                    android:onClick="addOneForTeamB"
                    android:text="@string/team_add_one_point" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_standard"
            android:layout_marginTop="@dimen/margin_half"
            android:onClick="resetTeamScores"
            android:text="@string/team_reset" />
    </LinearLayout>
</ScrollView>
