<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_main"
    android:title="@string/app_title_settings"
    tools:context=".SettingsActivity">

    <EditTextPreference
        android:defaultValue="@string/setting_default_page_size"
        android:inputType="number"
        android:key="@string/setting_key_page_size"
        android:selectAllOnFocus="true"
        android:title="@string/setting_title_page_size" />

    <ListPreference
        android:defaultValue="@string/setting_default_order_by"
        android:entries="@array/setting_label_order_by_options"
        android:entryValues="@array/setting_value_order_by_options"
        android:key="@string/setting_key_order_by"
        android:title="@string/setting_title_order_by" />
</PreferenceScreen>
